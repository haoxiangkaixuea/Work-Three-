<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.scujcc.workthreeweek">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--     声明本应用可允许通信的权限（全权限）-->
    <uses-permission android:name="scut.carson_ho.PROVIDER" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DatesContentActivity"
            android:label="@string/DatasContentActivity" />
        <activity android:name=".SQLiteActivity" />
        <activity
            android:name=".DataContentActivity"
            android:label="@string/DataContentActivity" />
        <activity
            android:name=".LitePalActivity"
            android:label="@string/LitePalActivity" />
        <activity
            android:name=".IntentServiceActivity"
            android:label="@string/intentservice_activity" />
        <activity
            android:name=".HandlerActivity"
            android:label="@string/handler_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".NewHandlerActivity"
            android:label="@string/NewHandlerActivity" />
        <activity
            android:name=".AsyncTaskActivity"
            android:label="@string/asyn_task" />

        <service android:name=".MyIntentService" />

        <provider
            android:name=".DataContentProvider"
            android:authorities="cn.edu.scujcc.workthreeweek"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>